{
	"name": "web-app-svelte",
	"version": "0.0.1",
	"scripts": {
		"withenv": "env-cmd --silent -f ../../.env -- ",
		"withenv:dev": "env-cmd --silent -f ../../.env.dev -- ",
		"dev": "pnpm withenv:dev vite dev",
		"build": "pnpm withenv vite build",
		"start": "pnpm withenv node build",
		"preview": "pnpm withenv vite preview",
		"test": "pnpm test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/eslint": "^8.56.7",
		"@types/node": "^20.12.4",
		"@types/throttle-debounce": "^5.0.2",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@auth/prisma-adapter": "^1.5.2",
		"@auth/sveltekit": "^0.14.2",
		"@movies4discord/db": "workspace:*",
		"@movies4discord/interfaces": "workspace:*",
		"@tailwindcss/forms": "^0.5.7",
		"got": "^14.2.1",
		"svelte-icons-pack": "^3.1.3",
		"tailwind-scrollbar-hide": "^1.1.7",
		"throttle-debounce": "^5.0.0",
		"quick-lru": "6.1.1"
	}
}
