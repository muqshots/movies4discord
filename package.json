{
  "name": "movies4discord",
  "private": true,
  "homepage": "https://github.com/muqshots/movies4discord",
  "repository": {
    "type": "git",
    "url": "https://github.com/muqshots/movies4discord"
  },
  "contributors": [
    {
      "name": "Muqshots",
      "url": "https://github.com/muqshots"
    },
    {
      "name": "Razorback360",
      "url": "https://github.com/Razorback360"
    },
    {
      "name": "rhld16",
      "url": "https://github.com/rhld16"
    },
    {
      "name": "squidzter",
      "url": "https://github.com/squidzter"
    }
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r --workspace-concurrency infinity --sort --stream dev",
    "build": "pnpm -r --workspace-concurrency infinity --sort --stream build",
    "start": "pnpm -r --workspace-concurrency infinity --sort --stream start",
    "lint": "pnpm -r --workspace-concurrency infinity --sort lint",
    "db": "pnpm --workspace-concurrency infinity --sort --filter @movies4discord/db run",
    "clean": "rimraf '.cache/*' && pnpm -r --workspace-concurrency infinity --sort clean && rimraf '**/node_modules'",
    "fix:all-files": "pnpm -r --workspace-concurrency infinity --sort fix:all-files",
    "typecheck": "pnpm -r --workspace-concurrency infinity --sort typecheck",
    "nuke:node_modules": "rimraf '**/node_modules'",
    "docker:start": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose up -d --build",
    "docker:dev": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose up -f ./docker-compose-dev.yml -d --build"
  },
  "devDependencies": {
    "prettier": "3.2.5",
    "rimraf": "5.0.5"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "npm": "please-use-pnpm",
    "pnpm": "^8.15.6"
  },
  "packageManager": "pnpm@8.15.6"
}
